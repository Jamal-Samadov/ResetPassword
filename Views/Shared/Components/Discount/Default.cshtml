@{
    List<Product> products = Model;
}

<div class="product-area section-space-top-100">
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="section-title-wrap without-tab">
                <h2 style="font-size:60px;color:green" class="section-title">Discount Products</h2>
                <p style="margin-left:8rem" class="section-desc">
                    Welcome to our discount product
                </p>
            </div>
            <section id="products">
                <div class="container">
                    <div class="row">
                        @foreach (var product in products)
                        {
                            <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                                <div class="product-item text-center" data-id="@product.Category.Name.ToLower();">
                                    <div class="img">
                                        <a href="">
                                            <img src="~/img/@product.ImageUrl" class="img-fluid" alt="">
                                        </a>
                                    </div>
                                    <div class="title mt-3">
                                        <h6>@product.Name</h6>
                                    </div>
                                    <div class="price">
                                        <span class="text-black-50">Add to cart</span>
                                        <span class="text-black-50">$@product.Price</span>
                                        <del class="disc-price">$@product.Discount</del>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>